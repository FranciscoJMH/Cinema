    <h1 align="center">Películas</h1>
  <br>
    <div class="row">
      <div class="col-1">
      </div>
      <div class="col-10">
      <div class="row">
        <% @movies.each do |movie| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card h-100">
            <div align="center">
            <%= link_to image_tag(movie.cover, alt: "", height: "300", width: "250"), movie, class: "card-img-top" %>
            </div>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to movie.title, movie %>
              </h4>
              <h5><%= movie.year.year %></h5>
              <p class="card-text"><%= movie.description %></p>
            </div>
            <div class="card-footer">
              <small class="text-muted">
                <% (movie.rating).times do %>
                  &#9733;
                <% end %>
                <% (5 - movie.rating).times do %>
                  &#9734;
                <% end %>
              </small>
              <h6>
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <%= link_to 'Editar', edit_movie_path(movie) %> |
                  <%= link_to 'Elminar', movie, method: :delete, data: { confirm: '¿Estas seguro?' } %> |
                <% end %>
              <% end %>
                <%= link_to 'Ver', movie %>
              </h6>
            </div>
          </div>
        </div>
      <% end %>
    </div>


    <br>
    <h4 align="center">
    <%= link_to 'Nueva Pelicula', new_movie_path %>
    </h4>
  </div>
</div>

<p id="notice"><%= notice %></p>
