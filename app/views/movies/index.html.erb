<div class="row">
  <div class="col-2">
  </div>
  <div class="col-8">
    <h1>Peliculas</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Descripcion</th>
          <th>Categoria</th>
          <th>Año</th>
          <th>Url Trailer</th>
          <th>Portada</th>
          <th>Rating</th>
          <th>Activo</th>
          <th>Dia de publicación</th>
          <th>Horarios</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.description %></td>
            <td><%= movie.category %></td>
            <td><%= movie.year %></td>
            <td><%= movie.trailer %></td>
            <td><%= movie.cover %></td>
            <td><%= movie.rating %></td>
            <td><%= movie.active %></td>
            <td><%= movie.publish %></td>
            <td><%= movie.schedule %></td>
            <td><%= link_to 'Ver', movie %></td>
            <td><%= link_to 'Editar', edit_movie_path(movie) %></td>
            <td><%= link_to 'Elminar', movie, method: :delete, data: { confirm: '¿Estas seguro?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva Pelicula', new_movie_path %>
  </div>
</div>

<p id="notice"><%= notice %></p>
