

  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Categorias</h1>
        <div class="list-group">
          <% @categories.each do |category| %>
            <a href="#" class="list-group-item"><%= category %></a>
          <% end %>
        </div>

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <% 3.times.with_index do |index| %>
              <li data-target="#carouselExampleIndicators" data-slide-to=<%= index %>></li>
            <% end %>
          </ol>
          <div class="carousel-inner" role="listbox">
            <% @movies.first(3).each do |movie| %>
              <div class="carousel-item active">
                <%= video_tag movie.trailer, size: "900x350", controls: true, class: "d-block img-fluid" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row">
          <% @movies.each do |movie| %>
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
                <%= link_to image_tag(movie.cover, alt: "", height: "300", width: "250"), movie, class: "card-img-top" %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to movie.title, movie %>
                  </h4>
                  <h5><%= movie.year.year %></h5>
                  <p class="card-text"><%= movie.description %></p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                    <% (movie.rating).times do %>
                        &#9733;
                    <% end %>
                    <% (5 - movie.rating).times do %>
                        &#9734;
                    <% end %>
                  </small>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->


